<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="traders">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="icon_text">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">true</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="elevation">5dp</item>
    </style>
    <style name="table_list">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="addingpage">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="edit_text_recycleview_title">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">Title</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="edit_text_recycleview_cpandsp">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">left</item>
    </style>
    <style name="background_color">
        <item name="android:background">#F05434</item>
    </style>
</resources>